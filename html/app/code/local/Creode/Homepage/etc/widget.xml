<?xml version="1.0"?>
<widgets>    
	<homepage_homepagebannerslide type="homepage/homepagebannerslide" translate="name description" module="homepage">
        <name>Homepage Banner Slide</name>
        <description type="desc">Banner slide for the homepage</description>
        <parameters>
		    <title>
                <label>Title</label>
                <required>1</required>
                <visible>1</visible>
                <type>text</type>
                <sort_order>10</sort_order>
                <value>title</value>
            </title>
            <text>
                <label>Text</label>
                <required>1</required>
                <visible>1</visible>
                <type>textarea</type>
                <sort_order>20</sort_order>
                <value>text</value>
            </text>
            <image>
                <label>Image</label>
                <required>1</required>
                <visible>1</visible>
                <type>widgetimagechooser/chooser</type>
                <sort_order>30</sort_order>
                <value>banner</value>
            </image>
        </parameters>
    </homepage_homepagebannerslide>
</widgets>